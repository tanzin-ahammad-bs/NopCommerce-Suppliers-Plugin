﻿@using Nop.Plugin.Misc.Suppliers.Models

@model SupplierModel

@{
	Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    //page title
    ViewBag.PageTitle = T("Admin.Suppliers.AddNew").Text;
    //active menu item (system name)
    NopHtml.SetActiveMenuItemSystemName("Suppliers");
}

<form asp-controller="Suppliers" asp-action="Create" method="post">
    <div class="content-header clearfix">
        <h1 class="float-left">
            @T("Admin.Suppliers.AddNew")
            <small>
                <i class="fas fa-arrow-circle-left"></i>
                <a asp-action="List">@T("Admin.Suppliers.BackToList")</a>
            </small>
        </h1>
        <div class="float-right">
            <button type="submit" name="save" class="btn btn-primary">
                <i class="far fa-floppy-disk"></i>
                @T("Admin.Common.Save")
            </button>
            <button type="submit" name="save-continue" class="btn btn-primary">
                <i class="far fa-floppy-disk"></i>
                @T("Admin.Common.SaveContinue")
            </button>
            @await Component.InvokeAsync(typeof(AdminWidgetViewComponent), new { widgetZone = AdminWidgetZones.VendorDetailsButtons, additionalData = Model })
        </div>
    </div>
	@await Html.PartialAsync("~/Plugins/Misc.Suppliers/Views/Suppliers/_CreateOrUpdate.cshtml", Model)
</form>